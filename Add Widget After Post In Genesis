//* Adding after post widget
add_action( 'genesis_after_entry', 'wpvkpf', 5 );
function wpvkpf() {

//* Widget will appear only on single page or post
	if ( is_singular( 'post' ) )
		genesis_widget_area( 'after-entry', array(
			'before' => '<div class="after-entry widget-area">',
			'after'  => '</div>',
		) );

}

//* Register Wordpress Widget Area
genesis_register_sidebar( array(
	'id'          => 'after-entry',
	'name'        => __( 'After Content Area', 'wpvkpf' ),
	'description' => __( 'Your widget will appear after content.', 'wpvkpf' ),
) );
